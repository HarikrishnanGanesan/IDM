
@model List<IDM.Models.Domain.Employee> 
@{
    ViewData["Title"] = "Employee";
}

<h1>Employees</h1>
<div class="tbl-content">
<table class="table">
    <thead>
        <tr>
            <th>FirstName</th>
            <th>LastName</th>
            <th>D.O.B</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Department</th>
            <th>AdhaarNumber</th>
            <th>Address</th>
            <th>MobileNumber</th>
            <th>Gender</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>                  
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.DateOfBirth.ToString("dd-MM-yyyy")</td>
                <td>@employee.email</td>
                <td>@employee.Salary</td>
                <td>@employee.Department</td>
                <td>@employee.AdhaarNumber</td>
                <td>@employee.Address</td>
                <td>@employee.MobileNumber</td>
                <td>@employee.Gender</td>
                <td><a href="~/Admin/Update/@employee.Id"><button>Modify</button></a></td>
            </tr>
        }
    </tbody>
</table>
</div>
<div class="text-center">
    <img src="~/images/AspireSystemslogo.png" alt="logo" style="width:50%">
</div>
