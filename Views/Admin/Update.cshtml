@model IDM.Models.UpdateEmployeeViewModel
@{
    ViewData["Title"] = "Modify Employee";
}
<h1><b>Edit Employee</b></h1>
<form method="post" action="View" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Id</label>
        <input type="type" class="form-control" asp-for="Id" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">FirstName</label>
        <input type="text" class="form-control" asp-for="FirstName">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">LastName</label>
        <input type="text" class="form-control" asp-for="LastName">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Email Address</label>
        <input type="email" class="form-control" asp-for="email">
        <span asp-validation-for="email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Salary</label>
        <input type="number" class="form-control" asp-for="Salary">
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Date Of Birth</label>
        <input type="date" class="form-control" asp-for="DateOfBirth">
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Department</label>
        <input type="text" class="form-control" asp-for="Department">
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">AdhaarNumber</label>
        <input type="number" class="form-control" asp-for="AdhaarNumber">
        <span asp-validation-for="AdhaarNumber" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Address">
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">MobileNumber</label>
        <input type="number" class="form-control" asp-for="MobileNumber">
        <span asp-validation-for="MobileNumber" class="text-danger"></span>
    </div>
   <div class="mb-3">
        <label for="" class="form-label">Gender</label>
       <select class="form-select" asp-for="Gender" required>
       <option value="">Select Gender</option>
        <option value="Male">Male</option>
       <option value="Female">Female</option>
       <option value="Other">Other</option>
     </select>   
    </div>
    <button type="submit" class="btn btn-primary">Save Update</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Admin">Delete</button>
</form>
<div class="text-center">
    <img src="~/images/AspireSystemslogo.png" alt="logo" style="width:50%">
</div>
<br>
<br>
<br>
<br>
<style>
    @@keyframes animate {
	0% {
		background-position: 0% 50%;
	}
	50% {
		background-position: 100% 50%;
	}
	100% {
		background-position: 0% 50%;
	}
}

body {
  min-height: 50vh;
  z-index: 1;
  background: linear-gradient(-45deg, rgba(195, 122, 255, 0.866), rgba(122, 228, 255, 0.652), rgba(109, 109, 255, 0.608), rgba(255, 116, 236, 0.658));
  background-size: 400% 400%;
  width: 100%;
  height: 100vh;
  animation: animate 5s ease infinite;
}
h1{
  font-size: 30px;
  color: #4a4a4a;
  text-transform: uppercase;
  font-weight: 300;
  text-align: center;
  margin-bottom: 15px;
}

</style>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

