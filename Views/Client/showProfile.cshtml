@model List<IDM.Models.Domain.Employee>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "My Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
</head>
<body>
    <h1><b>MY PROFILE</b></h1>
    <div class="main">
        <div class="card">
            <div class="card-body">
                @foreach (var employee in Model)
                {
                    @if (employee.email == @User.Identity?.Name)
                    {
                    <table>
                        <tbody>
                            <tr>
                                <td>FirstName</td>
                                <td>:</td>
                                <td>@employee.FirstName</td>
                            </tr>
                            <tr>
                                <td>LastName</td>
                                <td>:</td>
                                <td>@employee.LastName</td>
                            </tr>
                            <tr>
                                <td>Email</td>
                                <td>:</td>
                                <td>@employee.email</td>
                            </tr>
                            <tr>
                                <td>D.O.B</td>
                                <td>:</td>
                                <td>@employee.DateOfBirth.ToString("dd-MM-yyyy")</td>
                            </tr>
                            <tr>
                                <td>Salary</td>
                                <td>:</td>
                                <td>@employee.Salary</td>
                            </tr>
                            <tr>
                                <td>Department</td>
                                <td>:</td>
                                <td>@employee.Department</td>
                            </tr>
                            <tr>
                                <td>AdhaarNumber</td>
                                <td>:</td>
                                <td>@employee.AdhaarNumber</td>
                            </tr>
                            <tr>
                                <td>Address</td>
                                <td>:</td>
                                <td>@employee.Address</td>
                            </tr>
                            <tr>
                                <td>MobileNumber</td>
                                <td>:</td>
                                <td>@employee.MobileNumber</td>
                            </tr>
                            <tr>
                                <td>Gender</td>
                                <td>:</td>
                                <td>@employee.Gender</td>
                            </tr>
                        </tbody>
                    </table>
                    }
                }
            </div>
        </div>
    </div>
<br>
<br>
</body>
</html>


<style>
    @@keyframes animate {
	0% {
		background-position: 0% 50%;
	}
	50% {
		background-position: 100% 50%;
	}
	100% {
		background-position: 0% 50%;
	}
}

    .main {
        margin-top: 2%;
        margin-left: 10%;
        font-size: 70px;
        width: 70%;
    }

        .main h2 {
            color: #000000;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 50px;
            margin-bottom: 10px;
        }

        .main .card {
            background-color: #f9dfff;
            border-radius: 18px;
            box-shadow: 1px 1px 8px 0 grey;
            height: auto;
            width: 400px;
            margin-bottom: 20px;
            font-size: 50px;
            text-align: center;
            margin-left: 35%;
        }

            .main .card table {
                border: none;
                font-size: 30px;
                height: 270px;
                width: 100%;
            }

body {
  min-height: 50vh;
  z-index: 1;
  background: linear-gradient(-45deg, rgba(195, 122, 255, 0.866), rgba(122, 228, 255, 0.652), rgba(109, 109, 255, 0.608), rgba(255, 116, 236, 0.658));
  background-size: 400% 400%;
  width: 100%;
  height: 100vh;
  animation: animate 5s ease infinite;
  font-family: 'Roboto', sans-serif;
}
h1{
  font-size: 30px;
  color: #4a4a4a;
  text-transform: uppercase;
  font-weight: 300;
  text-align: center;
  margin-bottom: 15px;
}
table{
  width:100%;
  position: relative;
  padding-left: 50%;
}
.tbl-content{
  background-color: rgba(255, 255, 255, 0.485);
  height:300px;
  overflow-x:auto;
  margin-top: 0px;
  border: 1px solid rgba(167, 167, 167, 0.485);
}
th{
  padding: 15px;
  vertical-align:middle;
  text-align: left;
  font-weight: 500;
  font-size: 12px;
  color: #4a4a4a;
  text-transform: uppercase;
}
td{
  padding: 10px;
  text-align: left;
  vertical-align:middle;
  font-weight: 300;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  font-size: 15px;
  color: #363636;
  border-bottom: solid 1px rgba(255,255,255,0.1);
}


section{
  margin: 5px;
}

::-webkit-scrollbar {
    width: 6px;
} 
::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3); 
} 
::-webkit-scrollbar-thumb {
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3); 
}
</style>
