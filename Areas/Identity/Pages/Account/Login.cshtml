@page
@using IDM.Areas.Identity.Pages.Account
@model LoginModel

@{
    ViewData["Title"] = "Login";
}


<!doctype html>
<html lang="en">
  <head>
  	<title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">	
    <link rel="stylesheet" href="~/css/login.css" type="text/css" />
	</head>
	<body>
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-5">
					<div class="login-wrap p-4 p-md-5">
		      	<div class="icon d-flex align-items-center justify-content-center">
		      		<span class="fa fa-user-o"></span>
		      	</div>
		      	<h3 class="text-center mb-4">LOGIN</h3>
				<form method="post">
		      		<div class="form-group">
		      			<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="email address" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
		      		</div>
                    <div class="form-group">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
	                <div class="form-group d-md-flex">
                        <div class="w-50">
                            <label asp-for="Input.RememberMe" class="checkbox-wrap checkbox-primary">
                                <input type="checkbox" checked class="form-check-input" asp-for="Input.RememberMe" />
                                <span class="checkmark"></span>
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <div class="w-50 text-md-right">
                            <div class="link">
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </div>	
                        </div>				
	                </div>
				@if (@TempData["pass"]!=null)
				{
					<div>
                    <div id='container'>
                        <div id='hideMe'>Your password is @TempData["pass"]</div>
                        @{
                            TempData["pass"]=null;
                        }
                    </div>
                    </div>
				}
				<h3 class="text-center mb-4">@ViewBag.Message</h3>				  
	            <div class="form-group">
                    <button id="login-submit" type="submit" class="btn btn-primary rounded submit p-3 px-5">Login</button>
	            </div>
				<br>
				<br>
	        </form>
			<br>
			<br>
	        </div>			
		</div>		
		</div>	
		</div>	
	</section>
    <section>
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div class="nav">
                        
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
    </section>

	<footer class="footer text-muted">
        <div class="container-fluid">
            &copy; 2023 - Identity Management System
        </div>
    </footer>

	<script src="js/jquery.min.js"></script>
	<script src="js/popper.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/main.js"></script>
	</body>
</html>

<style>

body{
    z-index: 1;
    background: linear-gradient(-45deg, rgba(195, 122, 255, 0.866), rgba(122, 228, 255, 0.652), rgba(109, 109, 255, 0.608), rgba(255, 116, 236, 0.658));
    background-size: 400% 400%;
    width: 100%;
    height: 100vh;
    animation: animate 15s ease infinite;
}
h1{
	position: relative;
	text-align: center;
	font-size: 20px;
	font-weight: bold;
}
.footer {
  position: fixed;
  bottom: 0;
  margin-bottom: 0%;
  width: 100%;
  white-space: nowrap;
  line-height: 80px;
  background-color: #ffffff;
  text-align: center;
}
	html, body, #container {
    height:100%;
    width:100%;
    margin:0;
    padding:0;
}
#container {
    overflow:hidden;
    position:relative;
}
#hideMe {
    -webkit-animation: cssAnimation 10s forwards; 
    animation: cssAnimation 10s forwards;
}
@@keyframes cssAnimation {
    0%   {opacity: 1;}
    90%  {opacity: 1;}
    100% {opacity: 0;}
}
@@-webkit-keyframes cssAnimation {
    0%   {opacity: 1;}
    90%  {opacity: 1;}
    100% {opacity: 0;}
}
@@keyframes animate {
      0% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
      100% {
        background-position: 0% 50%;
      }
}
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
